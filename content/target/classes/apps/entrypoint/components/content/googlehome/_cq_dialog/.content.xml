<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="GoogleHome"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            granite:class="core-wcm-ps3-v1"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <settings
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Settings"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                    margin="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <ps3unique
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    defaultValue="http://raspberrypi.local:5000/bitcoin"
                                    fieldLabel="Unique"
                                    fieldDescription="http://raspberrypi.local:5000/bitcoin"
                                    name="./googleHomeUnique">
                            </ps3unique>
                            <ps3url
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="URL"
                                    fieldDescription="url to Google Home"
                                    name="./googleHomeUrl">
                            </ps3url>
                            <ps3continuescheck
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    text="Check to enable heartbeat"
                                    name="./googleHomeContinuesCheck"
                                    value="true">
                            </ps3continuescheck>
                            <ps3numberOfLineDisplay
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    defaultValues="1"
                                    fieldLabel="Number of Line display"
                                    name="./googleHomeNumberOfLineDisplay">
                            </ps3numberOfLineDisplay>
                            <ps3height
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    min="0"
                                    step="1"
                                    fieldLabel="Height"
                                    name="./googleHomeheight">
                            </ps3height>
                            <ps3width
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    fieldLabel="Width"
                                    min="0"
                                    step="1"
                                    name="./googleHomewidth">
                            </ps3width>
                        </items>
                    </columns>
                </items>
            </settings>
        </items>
    </content>
</jcr:root>
